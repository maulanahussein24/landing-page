---
const products = [
  {
    image: "https://images.unsplash.com/photo-1542272617-08f08630329e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    id: 1
  },
   {
    image: "https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    id: 2
  },
   {
    image: "https://images.unsplash.com/photo-1542272454315-4c01d7490361?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80", // Needs a male model, changing to match better
    id: 3
  }
];
// Updating images to match the specific look:
// 1. Woman with coat/hat
// 2. Boots/legs
// 3. Man with stripes - hard to find exact, using closest match fashion portraits
// 2. Boots/legs
// 3. Man with stripes - hard to find exact, using closest match fashion portraits
const base = import.meta.env.BASE_URL;
const newArrivals = [
    base + "foto 2 .png", // Fashion woman
    base + "foto 2 .png", // Boots close up
    base + "foto 2 .png"  // Man portrait
]
---
<section class="new-arrival">
  <div class="container">
    <span class="section-subtitle">Product</span>
    <h2 class="section-title">New Arrival</h2>
    
    <div class="arrival-grid">
      {newArrivals.map(img => (
        <div class="arrival-item" style={`background-image: url('${img}')`}>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .new-arrival {
    padding: 80px 0;
  }
  
  .section-title {
    font-size: 4rem;
    font-family: var(--font-heading);
    margin-bottom: 50px;
    color: #554a3e; /* Brownish from image */
  }

  .section-subtitle {
     color: #554a3e;
     font-weight: 700;
  }

  .arrival-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .arrival-item {
    aspect-ratio: 1/1.2;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: transform 0.3s ease;
  }
  
  .arrival-item:hover {
    transform: scale(1.05);
  }
</style>
