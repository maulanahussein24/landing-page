---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import FeaturesComponent from '../components/Features.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />
  <div class="features-page">
    <div class="header">
      <h1>Why Choose Us</h1>
      <p>Discover what makes Gaya Kita special.</p>
    </div>
    <FeaturesComponent />
  </div>
  <Footer />
</Layout>

<style>
  .features-page {
    padding-top: 100px;
  }
  
  .header {
    text-align: center;
    margin-bottom: 40px;
  }

  .header h1 {
    font-family: var(--font-heading);
    font-size: 3rem;
    color: #333;
  }
</style>
